
public class ControleBonificacao {

	private double soma;
	
	public void registra(Gerente gerente){
		double bonificacao = gerente.getBonificacao();
		this.soma = this.soma + bonificacao;
		
	}

	public double getSoma() {
		return soma;
	}

	public void setSoma(double soma) {
		this.soma = soma;
	}

}
